<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.CommunityIssueReporter" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/accent</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="colorOnBackground">@color/primary_text</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <!-- Ripple color -->
        <item name="colorControlHighlight">#3DFFFFFF</item>
    </style>

    <style name="Theme.CommunityIssueReporter" parent="Base.Theme.CommunityIssueReporter" />

    <!-- No Action Bar Theme -->
    <style name="Theme.CommunityIssueReporter.NoActionBar" parent="Theme.CommunityIssueReporter">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/dark_background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Custom Input Layout Style -->
    <style name="CustomTextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginTop">16dp</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="startIconTint">@color/primary</item>
        <item name="android:textColorHint">@color/hint_text_dark</item>
        <item name="hintTextAppearance">@style/HintTextStyle</item>
        <item name="boxBackgroundColor">@color/input_background</item>
    </style>

    <!-- Hint Text Style -->
    <style name="HintTextStyle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Primary Button Style -->
    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="cornerRadius">12dp</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- Secondary Button Style (for Google Sign In) -->
    <style name="SecondaryButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="strokeColor">@color/divider</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <!-- Link Text Style -->
    <style name="LinkText" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_light</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <!-- Title Text Style -->
    <style name="TitleText">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <!-- Card Style -->
    <style name="CustomCard" parent="Widget.MaterialComponents.CardView">
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">24dp</item>
        <item name="cardBackgroundColor">@color/card_background</item>
    </style>

    <!-- Error Message Style -->
    <style name="ErrorMessage">
        <item name="android:textColor">@color/error_red</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/error_background</item>
    </style>

    <!-- Success Message Style -->
    <style name="SuccessMessage">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:background">@drawable/success_background</item>
    </style>

    <!-- Auth Screen Theme -->
    <style name="Theme.CommunityIssueReporter.Auth"
        parent="Theme.CommunityIssueReporter.NoActionBar">
        <item name="android:windowBackground">@color/background</item>
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Alert Dialog Theme -->
    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/dialog_background</item>
        <item name="colorOnSurface">@color/primary_text</item>
        <item name="buttonBarPositiveButtonStyle">@style/AlertDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AlertDialogButtonStyle</item>
    </style>

    <style name="AlertDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
</resources>